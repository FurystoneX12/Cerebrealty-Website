
<div class="container">
  <!-- notice -->
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <p id="notice"><%= notice %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <!-- end of notice -->

  <div class="card">
    <div class="card-body">
      <div class="text-center">
        <%= image_tag("image not available at the moment, please stay tuned.png", width:"50%;") %>
      </div>
      <br>
      <h3><%= @real_estate.caption %></h3>
    </div>
  </div>

  <br>
  
  <div class="card">
    <div class="card-body">
      <%= @real_estate.synopsis %>
    </div>
  </div>
  <p>
    <strong>Offer type:</strong>
    <%= @real_estate.offer_type %>
  </p>

  <p>
    <strong>Object:</strong>
    <%= @real_estate.object %>
  </p>

  <p>
    <strong>Land area:</strong>
    <%= @real_estate.land_area %>
  </p>

  <p>
    <strong>Floor area:</strong>
    <%= @real_estate.floor_area %>
  </p>

  <p>
    <strong>Town and province:</strong>
    <%= @real_estate.town_and_province %>
  </p>

  <p>
    <strong>Bedroom:</strong>
    <%= @real_estate.bedroom %>
  </p>

  <p>
    <strong>Bathroom:</strong>
    <%= @real_estate.bathroom %>
  </p>

  <p>
    <strong>Carport:</strong>
    <%= @real_estate.carport %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= @real_estate.image %>
    <image src="<%= @real_estate.image %>" style="width: 50%;">
  </p>

  <%= link_to 'Edit', edit_real_estate_path(@real_estate) %> |
  <%= link_to 'Back', real_estates_path %>
</div>
