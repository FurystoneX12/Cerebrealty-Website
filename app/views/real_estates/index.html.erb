  <div class="row row-cols-1 row-cols-md-3 g-4 ">
    <% @real_estates.each do |real_estate| %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <% if real_estate.image == :binary %>
              <%= image_tag real_estate.image, style:"width: 100%;" %>
            <!-- < % elsif real_estate.image == nil? %> -->
            <% else %>
              <%= image_tag("unavailable image.png", width:"100%;") %>

            <% end %>
            <h5 class="card-title"><%= real_estate.synopsis %></h5>

            <p class="card-text">
              <!-- Condominium -->
              <% if real_estate.object == "Condominium" %>
                üè¢<%= real_estate.object %>
                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>
              
              <!-- House and Lot -->
              <% elsif real_estate.object == "House and Lot" %>
                üè°<%= real_estate.object %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>
              
              <!-- House -->
              <% elsif real_estate.object == "House" %>
                üè†<%= real_estate.object %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Lot -->
              <% elsif real_estate.object == "Lot" %>
                ‚õ±<%= real_estate.object %>

                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Townhouse -->
              <% elsif real_estate.object == "Townhouse" %>
                üèò<%= real_estate.object %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Lot with Structure -->
              <% elsif real_estate.object == "Lot with Structure" %>
                üè°<%= real_estate.object %>

                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Farmland -->
              <% elsif real_estate.object == "Farmland" %>
                üöú<%= real_estate.object %>

                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Apartment -->
              <% elsif real_estate.object == "Apartment" %>
                üè¢<%= real_estate.object %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Commercial -->
              <% elsif real_estate.object == "Commercial" %>
                üèóÔ∏è<%= real_estate.object %>
                
                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

              <!-- Industrials -->
              <% elsif real_estate.object == "Industrial" %>
                üè≠<%= real_estate.object %>
                
                <% if real_estate.land_area != nil? %>
                  <%= number_with_delimiter(real_estate.land_area, :delimiter => ",") %>sqm
                <% end %>

                <% if real_estate.floor_area != nil? %>
                   - FA: <%= number_with_delimiter(real_estate.floor_area, :delimiter => ",") %>sqm
                <% end %>

              <% end %>
            </p>
            <%= link_to 'Show', real_estate, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>


  <table>
    <thead>
      <tr>
        <th>Offer type</th>
        <th>Object</th>
        <th>Land area</th>
        <th>Floor area</th>
        <th>Town and province</th>
        <th>Bedroom</th>
        <th>Bathroom</th>
        <th>Carport</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @real_estates.each do |real_estate| %>
        <tr>
          <td><%= real_estate.offer_type %></td>
          <td><%= real_estate.object %></td>
          <td><%= real_estate.land_area %></td>
          <td><%= real_estate.floor_area %></td>
          <td><%= real_estate.town_and_province %></td>
          <td><%= real_estate.bedroom %></td>
          <td><%= real_estate.bathroom %></td>
          <td><%= real_estate.carport %></td>
          <td><%= link_to 'Show', real_estate %></td>
          <td><%= link_to 'Edit', edit_real_estate_path(real_estate) %></td>
          <td><%= link_to 'Destroy', real_estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create New Property', new_real_estate_path %>

