
<%= render "home/real_estate" %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listings</h1>

  <table>
    <thead>
      <tr>
        <th>Offer type</th>
        <th>Object</th>
        <th>Land area</th>
        <th>Floor area</th>
        <th>Town and province</th>
        <th>Bedroom</th>
        <th>Bathroom</th>
        <th>Carport</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= listing.offer_type %></td>
          <td><%= listing.object %></td>
          <td><%= listing.land_area %></td>
          <td><%= listing.floor_area %></td>
          <td><%= listing.town_and_province %></td>
          <td><%= listing.bedroom %></td>
          <td><%= listing.bathroom %></td>
          <td><%= listing.carport %></td>
          <td><%= listing.image %></td>
          <td><%= link_to 'Show', listing %></td>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Listing', new_listing_path %>
</div>
