<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Offer type</th>
      <th>Object</th>
      <th>Land area</th>
      <th>Floor area</th>
      <th>Town and province</th>
      <th>Bedroom</th>
      <th>Bathroom</th>
      <th>Carport</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.offer_type %></td>
        <td><%= property.object %></td>
        <td><%= property.land_area %></td>
        <td><%= property.floor_area %></td>
        <td><%= property.town_and_province %></td>
        <td><%= property.bedroom %></td>
        <td><%= property.bathroom %></td>
        <td><%= property.carport %></td>
        <td><%= property.image %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

